{
  "$schema": "http://json.schemastore.org/eslintrc",
  "extends": ["./browser.json", "./prettier.json", "./ts.prettier.json"],
  "env": {
    "mocha": true,
    "jasmine": true,
    "protractor": true
  },
  "plugins": ["@typescript-eslint/tslint"],
  "rules": {
    // Best Practices
    "no-invalid-this": "off",

    // ECMAScript 6
    "no-restricted-imports": [
      "error",
      { "patterns": ["node_modules", "rxjs/Rx", "zone.js/dist/zone-error"] }
    ],

    "@typescript-eslint/no-floating-promises": "off",
    "@typescript-eslint/promise-function-async": "off",

    "@typescript-eslint/tslint/config": [
      "error",
      {
        "lintFile": "@bmatei/eslint-config/angular.tslint.json"
      }
    ]
  }
}
